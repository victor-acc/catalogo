@model IEnumerable<catalogo.Models.Producto>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center my-4">
    <h1 class="display-4">Catálogo de Productos</h1>
</div>

<!-- Contenedor principal para centrar el contenido y espaciar los productos -->
<div class="container">
    <div class="row">
        @foreach (var producto in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm border-0">
                    <!-- Mostrar la imagen del producto -->
                    <img class="card-img-top img-fluid rounded-top" src="data:image/jpeg;base64,@Convert.ToBase64String(producto.Imagen)" alt="@producto.Nombreproducto" style="height:250px; object-fit:cover;" />
                    <div class="card-body d-flex flex-column">
                        <!-- Nombre del producto -->
                        <h5 class="card-title">@producto.Nombreproducto</h5>

                        <!-- Precio y Stock -->
                        <p class="card-text">
                            <strong>Precio:</strong> $@producto.Precio<br />
                            <strong>Stock:</strong> @producto.Stock unidades
                        </p>

                        <!-- Botón de acción, en este caso un enlace para ver más detalles -->
                        <a  class="btn btn-primary mt-auto">Ver Detalles</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>