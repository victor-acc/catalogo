@model catalogo.Models.Producto

@{
    ViewData["Title"] = "Delete Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h3 class="text-warning">Estas seguro de querer eliminar este producto?</h3>
<div class="card shadow-sm mb-4">
    <div class="card-header bg-danger text-white">
        <h4 class="card-title">Producto</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nombreproducto)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nombreproducto)
            </dd>

            <dt class="col-sm-2">
                Imagen
            </dt>
            <dd class="col-sm-10">
                <img src="@Url.Content("~/images/" + Model.Imagen)" alt="Imagen del producto" class="img-thumbnail" style="max-width: 200px; height: auto;" />
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Precio)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Precio)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Stock)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Stock)
            </dd>
        </dl>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Idproducto" />
    <div class="d-flex justify-content-between">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>

<div class="container mt-3">
    <!-- Mostrar el mensaje de error si existe -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
</div>
