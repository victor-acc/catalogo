@model catalogo.Models.Pedido

@{
    ViewData["Title"] = "Delete Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h3 class="text-warning">Estas seguro de eliminar este pedido?</h3>

<div class="card shadow-sm mb-4">
    <div class="card-header bg-danger text-white">
        <h4 class="card-title">Pedido</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cantidad)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cantidad)
            </dd>

            <dt class="col-sm-2">
                Cliente
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IdclienteNavigation.Idcliente)
            </dd>

            <dt class="col-sm-2">
                Producto
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IdproductoNavigation.Idproducto)
            </dd>
        </dl>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <div class="d-flex justify-content-between">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>
