@model catalogo.Models.Cliente

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center my-4">Edit Client</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit" class="bg-light p-4 rounded shadow-sm">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Idcliente" />

                <div class="form-group mb-3">
                    <label asp-for="Nombre" class="form-label">Name</label>
                    <input asp-for="Nombre" class="form-control" placeholder="Enter the client's name" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Correo" class="form-label">Email</label>
                    <input asp-for="Correo" class="form-control" placeholder="Enter the client's email" />
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <input type="submit" value="Save" class="btn btn-primary btn-lg w-100" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="text-center my-4">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
